<UserControl x:Class="TVIS.MVVM.Views.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVIS.MVVM.Views" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Dashboard" FontSize="36" Foreground="#EFEFFD"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1">
                <StackPanel Orientation="Horizontal" Margin="0 25 10 0">
                    <materialDesign:PackIcon Width="28" Height="28" Foreground="#EFEFFD" VerticalAlignment="Center" Margin="0 0 18 0" Kind="Table"/>
                    <TextBlock Text="Count of Persons" Foreground="#EFEFFD" FontSize="28" />
                    <TextBlock Margin="20 0 0 0" Text="26000" Foreground="#EFEFFD" FontSize="28" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 25 10 0">
                    <materialDesign:PackIcon Width="28" Height="28" Foreground="#EFEFFD" VerticalAlignment="Center" Margin="0 0 18 0" Kind="Table"/>
                    <TextBlock Text="Count of Persons" Foreground="#EFEFFD" FontSize="28" />
                    <TextBlock Margin="20 0 0 0" Text="26000" Foreground="#EFEFFD" FontSize="28" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 25 10 0">
                    <materialDesign:PackIcon Width="28" Height="28" Foreground="#EFEFFD" VerticalAlignment="Center" Margin="0 0 18 0" Kind="Table"/>
                    <TextBlock Text="Count of Persons" Foreground="#EFEFFD" FontSize="28" />
                    <TextBlock Margin="20 0 0 0" Text="26000" Foreground="#EFEFFD" FontSize="28" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 25 10 0">
                    <materialDesign:PackIcon Width="28" Height="28" Foreground="#EFEFFD" VerticalAlignment="Center" Margin="0 0 18 0" Kind="Table"/>
                    <TextBlock Text="Count of Persons" Foreground="#EFEFFD" FontSize="28" />
                    <TextBlock Margin="20 0 0 0" Text="26000" Foreground="#EFEFFD" FontSize="28" />
                </StackPanel>
                <Border CornerRadius="50" Margin="0 25 0 0" Width="300" Height="100" Background="#333351">
                    <TextBlock Text="2,628,456" Foreground="#EFEFFD" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                </Border>
            </StackPanel>
            <local:TableView Grid.Column="3" Height="390"/>
        </Grid>
        <StackPanel Grid.Row="3" Orientation="Vertical">
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <materialDesign:PackIcon Width="36" Height="36" Foreground="#EFEFFD" VerticalAlignment="Center" Margin="10 0 18 0" Kind="Table"/>
                <ComboBox TabIndex="0" Margin="5 25 10 25"  Width="218"  FontSize="32" BorderThickness="1" Background="Transparent" Foreground="#EFEFFD"/>
                <materialDesign:PackIcon Width="36" Height="36" Foreground="#EFEFFD" VerticalAlignment="Center" Margin="20 0 18 0" Kind="Table"/>
                <ComboBox TabIndex="1" Margin="5 25 10 25"  Width="218"  FontSize="32" BorderThickness="1" Background="Transparent" Foreground="#EFEFFD"/>
                <ComboBox TabIndex="2" Margin="5 25 10 25"  Width="218"  FontSize="32" BorderThickness="1" Background="Transparent" Foreground="#EFEFFD"/>

            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <materialDesign:PackIcon Width="36" Height="36" Foreground="#EFEFFD" VerticalAlignment="Center" Margin="10 0 18 0" Kind="Table"/>
                <ComboBox TabIndex="3" Margin="5 25 10 25"  Width="218"  FontSize="32" BorderThickness="1" Background="Transparent" Foreground="#EFEFFD"/>
                <DatePicker TabIndex="4" HorizontalContentAlignment="Stretch" Margin="5 25 10 25" Grid.Row="3" Width="218"  HorizontalAlignment="Right" FontSize="32" BorderThickness="1" Background="Transparent" Foreground="#EFEFFD"/>
                <DatePicker TabIndex="5" HorizontalContentAlignment="Stretch" Margin="5 25 10 25" Grid.Row="3" Width="218"  HorizontalAlignment="Right" FontSize="32" BorderThickness="1" Background="Transparent" Foreground="#EFEFFD"/>

            </StackPanel>
        </StackPanel>
       

    </Grid>
</UserControl>
